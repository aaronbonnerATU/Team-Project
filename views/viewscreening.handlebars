                <th>Screen</th>
                <th>Movie Name</th>
                <th>Date</th>
                <th>Available Seats</th>
                <th>Price</th>
                <th></th>
                
            </tr>
            {{#each screenings}}
            
            <tr>
                <td>Screen {{roomID}}</td>
                <td>{{title}}</td>
                <td>{{showtime}}</td>
                <td>{{placesLeft}} Remaining</td>
